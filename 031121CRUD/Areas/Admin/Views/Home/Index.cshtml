@model List<Employee>
@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <div class="row">
        @foreach (Employee emp in Model)
        {
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-header">
                        @emp.Name
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Surname: @emp.Surname</li>
                        <li class="list-group-item">Exp: @emp.Experience</li>
                        <li class="list-group-item"><a class="btn btn-danger w-100" onclick="return confirm('Eminsen?')" 
                                                       asp-controller="Employee" asp-action="Delete" asp-route-id="@emp.Id">Delete</a></li>
                        <li class="list-group-item"><a class="btn btn-primary w-100"
                                                       asp-controller="Employee" asp-action="Edit" asp-route-id="@emp.Id">Edit</a></li>
                    </ul>
                </div>
            </div>
        }
    </div>
</div>
